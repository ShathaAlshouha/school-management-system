@model SchoolProject.Data.ParentDto

@{
    ViewData["Title"] = "Parent Details";
}

<h2 class="text-center" style="color: #004e89;">Parent Details</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card" style="border-color: #002855;">
                <div class="card-header" style="background-color: #002855; color: white;">
                    <h4 class="mb-0">Parent Information</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Parent ID:</dt>
                        <dd class="col-sm-8">@Model.ParentID</dd>

                        <dt class="col-sm-4">National ID:</dt>
                        <dd class="col-sm-8">@Model.NationalID</dd>

                        <dt class="col-sm-4">Full Name:</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.SecondName @Model.LastName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Contact Number:</dt>
                        <dd class="col-sm-8">@Model.contactNumber</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Date of Birth:</dt>
                        <dd class="col-sm-8">@Model.DateOfBirth</dd>

                        <dt class="col-sm-4">Relationship to Student:</dt>
                        <dd class="col-sm-8">@Model.RelationshipToStudent</dd>
                    </dl>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Student")" class="btn" style="background-color: #004e89; color: white; border-color: #004e89;">Back to Student List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
