@model SchoolProject.Data.StudentDto

@{
    ViewData["Title"] = "Create Student";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f9fc;
            font-family: Arial, sans-serif;
        }

        .form-title {
            color: #00008b;
            font-weight: bold;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
        }

        label {
            font-weight: bold;
            color: #004e89;
        }

        input,
        textarea {
            border: 2px solid #b0c4de;
            border-radius: 5px;
            transition: border-color 0.3s;
        }

            input:focus,
            textarea:focus {
                border-color: #004e89;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 78, 137, 0.5);
            }

        .btn-primary {
            background-color: #004e89;
            border-color: #004e89;
        }

            .btn-primary:hover {
                background-color: #003f73;
                border-color: #003f73;
            }

        .btn-secondary {
            background-color: #a8a8a8;
            border-color: #a8a8a8;
            color: #ffffff;
        }

            .btn-secondary:hover {
                background-color: #8c8c8c;
                border-color: #8c8c8c;
            }

        .row {
            margin-bottom: 20px;
        }

        .col-md-6 {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4 form-title">Create New Student</h2>

        <div class="form-container">
            <form id="studentForm" asp-action="Create" method="post">
                <div class="row">
                    <!-- National ID -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="NationalID" class="form-label">National ID</label>
                            <input asp-for="NationalID" class="form-control" />
                            <span asp-validation-for="NationalID" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- First Name -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Second Name -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="SecondName" class="form-label">Second Name</label>
                            <input asp-for="SecondName" class="form-control" />
                            <span asp-validation-for="SecondName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Contact Number -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="contactNumber" class="form-label">Contact Number</label>
                            <input asp-for="contactNumber" class="form-control" />
                            <span asp-validation-for="contactNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Date of Birth -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="DateOfBirth" class="form-label">Date of Birth</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="Address" class="form-label">Address</label>
                            <textarea asp-for="Address" class="form-control"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Class Dropdown -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="ClassId" class="form-label">Class</label>
                            <select asp-for="ClassId" class="form-control"
                                    asp-items="@(new SelectList(ViewData["Classes"] as List<SchoolProject.Data.Class>, "ClassId", "ClassName"))">
                                <option value="">-- Select a Class --</option>
                            </select>
                            <span asp-validation-for="ClassId" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn-primary">Create Student</button>
                    <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
