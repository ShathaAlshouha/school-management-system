@model SchoolProject.Data.Payment

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f9fc;
            font-family: Arial, sans-serif;
        }

        .form-title {
            color: #00008b;
            font-weight: bold;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
        }

        label {
            font-weight: bold;
            color: #004e89;
        }

        input,
        select {
            border: 2px solid #b0c4de;
            border-radius: 5px;
            transition: border-color 0.3s;
        }

            input:focus,
            select:focus {
                border-color: #004e89;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 78, 137, 0.5);
            }

        .btn-primary {
            background-color: #004e89;
            border-color: #004e89;
        }

            .btn-primary:hover {
                background-color: #003f73;
                border-color: #003f73;
            }

        .btn-secondary {
            background-color: #a8a8a8;
            border-color: #a8a8a8;
            color: #ffffff;
        }

            .btn-secondary:hover {
                background-color: #8c8c8c;
                border-color: #8c8c8c;
            }

        .row {
            margin-bottom: 20px;
        }

        .col-md-6 {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4 form-title">Create Payment</h2>
        <form class="d-flex search-form mb-3" method="get" asp-action="Create" asp-controller="Payments">
            <input type="text" class="form-control" placeholder="Search by name" name="searchQuery" />
            <button type="submit" class="btn btn-primary ms-2">Search</button>
        </form>
        <div class="form-container">
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PaymentAmount" class="form-label">Payment Amount</label>
                            <input asp-for="PaymentAmount" class="form-control" />
                            <span asp-validation-for="PaymentAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PaymentDate" class="form-label">Payment Date</label>
                            <input asp-for="PaymentDate" class="form-control" />
                            <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="RemainingPayment" class="form-label">Remaining Payment</label>
                            <input asp-for="RemainingPayment" class="form-control" />
                            <span asp-validation-for="RemainingPayment" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TotalAmount" class="form-label">Total Amount</label>
                            <input asp-for="TotalAmount" class="form-control" />
                            <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label">Student</label>
                            <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ClassId" class="form-label">Class</label>
                            <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
