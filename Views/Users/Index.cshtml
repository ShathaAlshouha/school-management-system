@model IEnumerable<SchoolProject.Data.UserDto>
<!DOCTYPE html>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f9fc;
            font-family: Arial, sans-serif;
        }

        .table {
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .table thead {
                background-color: #003366;
                color: white;
            }

            .table tbody tr:hover {
                background-color: #f1f5f8;
            }

        .btn-primary {
            background-color: #004e89;
            border-color: #004e89;
        }

            .btn-primary:hover {
                background-color: #005bb5;
                border-color: #005bb5;
            }

        .btn-danger {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }

            .btn-danger:hover {
                background-color: #c0392b;
                border-color: #c0392b;
            }

        .btn-warning {
            background-color: #f39c12;
            border-color: #f39c12;
            color: white;
        }

            .btn-warning:hover {
                background-color: #e67e22;
                border-color: #e67e22;
            }

        .add-button {
            margin-bottom: 20px;
            background-color: #004e89;
            border-color: #004e89;
        }

            .add-button:hover {
                background-color: #004e89;
                border-color: #004e89;
            }

        .text-muted {
            color: #a8a8a8 !important;
        }

        h2 {
            color: #003366;
            font-weight: bold;
        }

        .search-form input {
            width: 100%;
        }

        .search-form button {
            background-color: #004e89;
            border-color: #004e89;
        }

            .search-form button:hover {
                background-color: #005bb5;
                border-color: #005bb5;
            }

        .form-control {
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <!-- Search form -->
    <form class="d-flex search-form mb-3" method="get" asp-action="Index" asp-controller="Users">
        <input type="text" class="form-control" placeholder="Search by name" name="searchQuery" />
        <button type="submit" class="btn btn-primary ms-2">Search</button>
    </form>

    <!-- Staff table -->
    <table class="table table-striped table-bordered mt-3">
        <thead>
            <tr>
                <th>#</th>
                <th> Username</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())

            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Username</td>
                        <td>@user.Password</td>
                        <td>
                            <a href="@Url.Action("Edit", "Users", new { id = user.UserId })" class="btn btn-warning btn-sm">Edit</a>

                            <a href="@Url.Action("Details", "Users", new { id = user.UserId })" class="btn btn-primary btn-sm">Details</a>

                            <form action="@Url.Action("Delete", "Users", new { id = user.UserId })" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }

            }

            else

            {
                <tr>
                    <td colspan="9" class="text-center text-muted">No Staff Found</td>
                </tr>
            }
        </tbody>
    </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
