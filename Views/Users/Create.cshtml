@model SchoolProject.Data.UserDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f9fc;
            font-family: Arial, sans-serif;
        }

        .form-title {
            color: #00008b;
            font-weight: bold;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
            max-width: 400px;
        }

        label {
            font-weight: bold;
            color: #004e89;
        }

        input {
            border: 2px solid #b0c4de;
            border-radius: 5px;
            transition: border-color 0.3s;
        }

            input:focus {
                border-color: #004e89;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 78, 137, 0.5);
            }

        .btn-primary {
            background-color: #004e89;
            border-color: #004e89;
        }

            .btn-primary:hover {
                background-color: #003f73;
                border-color: #003f73;
            }

        .btn-secondary {
            background-color: #a8a8a8;
            border-color: #a8a8a8;
            color: #ffffff;
        }

            .btn-secondary:hover {
                background-color: #8c8c8c;
                border-color: #8c8c8c;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4 form-title">Create User</h2>

        <div class="form-container">
            <form asp-action="Create" method="post">
                <!-- Username -->
                <div class="mb-3">
                    <label for="Username" class="form-label">Username</label>
                    <input asp-for="Username" type="text" class="form-control" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="PersonId" />
                <!-- Password -->
                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

