@model IEnumerable<SchoolProject.Data.Course>

@{
    
    var teacherName = ViewData["TeacherName"] as string;  // Retrieve teacher name
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f3f4f6;
            font-family: 'Poppins', Arial, sans-serif;
        }

        .page-title {
            color: #374151;
            font-weight: 800;
            font-size: 2rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .teacher-name {
            font-size: 1.5rem;
            font-weight: bold;
            color: #374151;
            text-align: center;
            margin-bottom: 30px;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            border-radius: 20px;
            overflow: hidden;
            background: #ffffff;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            }

        .card-header {
            background: linear-gradient(45deg, #1e3a8a, #1f2937);
            color: #ffffff;
            font-size: 1.3rem;
            font-weight: bold;
            text-align: center;
            padding: 15px;
        }

        .card-body {
            padding: 20px;
            border-radius: 0 0 20px 20px;
            color: #374151;
        }

        .btn-primary {
            background: linear-gradient(45deg, #15264e, #2d395b);
            border: none;
            font-weight: bold;
             border-radius: 20px;
            color: white;
            transition: background 0.3s ease, box-shadow 0.3s ease;
        }

            .btn-primary:hover {
                background: #a9a9a9;
                box-shadow: 0 8px 20px rgba(30, 64, 175, 0.5);
            }

        .no-courses {
            background: #e5e7eb;
            color: #374151;
            padding: 25px;
            border-radius: 15px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        @if (!string.IsNullOrEmpty(teacherName))
        {
            <div class="teacher-name">
                <h2> hi @teacherName !</h2> <!-- Display Teacher's Name -->
            </div>
        }

        <h2 class="text-center page-title">Courses Assigned to You</h2>

        @if (!Model.Any())
        {
            <div class="text-center no-courses">
                <h4>No courses found for this teacher.</h4>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var course in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100">
                            <div class="card-header">
                                @course.CourseName
                            </div>
                            <div class="card-body">
                                <p><strong>Course ID:</strong> @course.CourseId</p>
                                <p><strong>Class Name:</strong> @course.CourseClass?.ClassName</p>
                                <div class="d-grid">
                                    <a href="@Url.Action("ManageGrades", "TeacherHome", new { courseId = course.CourseId })"
                                       class="btn btn-primary">
                                        View Students
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
