@model SchoolProject.Data.TeacherDto
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Teacher Details</h2>
        <div class="card mt-4">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">First Name:</dt>
                    <dd class="col-sm-9">@Model.FirstName</dd>

                    <dt class="col-sm-3">Second Name:</dt>
                    <dd class="col-sm-9">@Model.SecondName</dd>

                    <dt class="col-sm-3">Last Name:</dt>
                    <dd class="col-sm-9">@Model.LastName</dd>

                   

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Contact Number:</dt>
                    <dd class="col-sm-9">@Model.contactNumber</dd>

                    <dt class="col-sm-3">Address:</dt>
                    <dd class="col-sm-9">@Model.Address</dd>

                    <dt class="col-sm-3">Date of Birth:</dt>
                    <dd class="col-sm-9">
                        @if (Model.DateOfBirth.HasValue)
                        {
                            @Model.DateOfBirth.Value.ToString("yyyy-MM-dd")
                        }
                        else
                        {
                            <span>Not Available</span>  <!-- إذا كانت القيمة فارغة -->
                        }
                    </dd>


                    <dt class="col-sm-3">Role:</dt>
                    <dd class="col-sm-9">@Model.Role</dd>

                    <dt class="col-sm-3">SubjectSpecialty:</dt>
                    <dd class="col-sm-9">@Model.SubjectSpecialty</dd>

                </dl>
                <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Back to Users List</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

