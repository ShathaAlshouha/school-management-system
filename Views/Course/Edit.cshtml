@model SchoolProject.Data.Course

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @{
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    <style>
        body {
            background-color: #f7f9fc;
            font-family: Arial, sans-serif;
        }

        .form-title {
            color: #00008b;
            font-weight: bold;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
        }

        label {
            font-weight: bold;
            color: #004e89;
        }

        input,
        select {
            border: 2px solid #b0c4de;
            border-radius: 5px;
            transition: border-color 0.3s;
        }

            input:focus,
            select:focus {
                border-color: #004e89;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 78, 137, 0.5);
            }

        .btn-primary {
            background-color: #004e89;
            border-color: #004e89;
        }

            .btn-primary:hover {
                background-color: #003f73;
                border-color: #003f73;
            }

        .btn-secondary {
            background-color: #a8a8a8;
            border-color: #a8a8a8;
            color: #ffffff;
        }

            .btn-secondary:hover {
                background-color: #8c8c8c;
                border-color: #8c8c8c;
            }

        .row {
            margin-bottom: 20px;
        }

        .col-md-6 {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4 form-title">Edit Course</h2>

        <div class="form-container">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CourseId" />

                <div class="row">
                    <!-- Course Name -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="CourseName" class="form-label">Course Name</label>
                            <input asp-for="CourseName" class="form-control" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Teacher Name -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="TeacherId" class="form-label">Teacher Name</label>
                            <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn-primary">
                        Save
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
