<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolProject</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolProject.styles.css" asp-append-version="true" />
    <style>

        header {
            border-radius: 20px;
            overflow: hidden; /* لضمان أن المحتوى داخل الـ header لا يتجاوز الحدود */
           
        }
        /* Sidebar styles */
        #sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #b0c4de;
            padding-top: 20px;
            transition: all 0.3s;
            z-index: 9999;
            border-radius: 10px;
        }

            #sidebar .nav-item {
                background-color: #b0c4de;
                margin-bottom: 5px;
                border-radius: 7px;
            }

                #sidebar .nav-item a {
                    color: white;
                    border-radius: 7px;
                }

                    #sidebar .nav-item a:hover {
                        background-color: #003f73;
                    }

        #page-content-wrapper {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
        }

        .navbar-collapse {
            margin-left: 250px;
        }

        /* Toggle sidebar */
        #wrapper.toggled #sidebar {
            margin-left: -250px;
        }

        #wrapper.toggled #page-content-wrapper {
            margin-left: 0;
        }
    </style>

</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar">
            <div class="sidebar-heading">
                <h3 class="text-white text-center">School</h3>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Index">
                        <i class="fas fa-users"></i> Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Staffs" asp-action="Index">
                        <i class="fas fa-user-tie"></i> Staff
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Teacher" asp-action="Index">
                        <i class="fas fa-chalkboard-teacher"></i>  Teachers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Student" asp-action="Index">
                        <i class="fas fa-user-graduate"></i>  Students
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Grades" asp-action="Index">
                        <i class="fas fa-chart-line"></i>  Grades
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Classes" asp-action="Index">
                        <i class="fas fa-door-open"></i>  Classes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Payments" asp-action="Index">
                        <i class="fas fa-wallet"></i>  Payments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Course" asp-action="Index">
                        <i class="fas fa-book"></i> Courses
                    </a>
                </li>
                
            </ul>

        </div>

       
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <header >
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SchoolProject</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- JavaScript to toggle Sidebar -->
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>


